   <!-- Modal for adding an entry -->
    <div class="modal fade" id="addModal" aria-hidden="true" data-backdrop="static">
      <div class="modal-dialog modal-xl">
        <div class="modal-content">
          <!-- Stepper Navigation -->
          @* <ul class="nav nav-pills">
            <li class="nav-item">
              <a class="nav-link active" href="#step1">Step 1</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#step2">Step 2</a>
            </li>
          </ul> *@
          <div class="modal-body">
            <!-- Step 1: Form -->
            <div id="step1">
              <h5 id="workflowModalLabel">Workflow Details</h5>
              <div class="row">
                <div class="col-md-4">
                  <label for="name">Name*:</label>
                  <input type="text" id="name" class="form-control" required />
                </div>
                <div class="col-md-4">
                  <label for="request-type">Request Type*:</label>
                  <select id="request-type" class="form-control" required>
                    <!-- Your provided options -->
                    @* <option value="">Select Request</option>
                    <option value="1">Indent Request</option>
                    <option value="2">Urgent Indent Request</option>
                    <option value="3">Service Request</option>
                    <option value="4">Code Creation Request</option>
                    <option value="5">Special Material Indent Request</option> *@
                  </select>
                </div>
                <div class="col-md-4">
                  <label for="status">Status*:</label>
                  <select id="status" class="form-control" required>
                    <option value="99999">Select</option>
                    <option value="1">Active</option>
                    <option value="0">Inactive</option>
                  </select>
                </div>
                <div class="col-md-12">
                  <label for="description">Description:</label>
                  <textarea id="description" class="form-control"></textarea>
                </div>
                <div>
                  <small class="form-text text-muted"
                    >*indicates required field</small
                  >
                </div>
              </div>
            </div>
            <!-- Step 2: Table (Initially hidden) -->
            <div id="step2" style="display: none">
              <h5 >Add Workflow Steps</h5>
              <!-- Table to display data -->
              <table id="editTable" class="table">
                <thead>
                  <tr>
                    <th>SI No</th>
                    <th>Role</th>
                    <!-- Column for Urgent Flag (hidden by default) -->
                    <th id="urgentFlagHeader" style="display: none">
                      Urgent Flag
                    </th>
                    <!-- Column based on Request Type -->
                    <th id="amountHeader">Amount</th>
                    <!-- Move "TAT (Hrs)" here -->
                    <th>TAT (Hrs)</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <!-- Table rows will be added here -->
                </tbody>
              </table>
            </div>
          </div>
          <!-- Modal Footer with Save Button -->
          <div class="modal-footer">
            <!-- Cancel Button -->
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
              id="cancelModalBtn"
            >
              Cancel
            </button>
            <!-- Save Button -->
            <button
              type="button"
              class="btn btn-success"
              id="saveBtn"
              style="display: none"
            >
              Save
            </button>
            <!-- Previous Button -->
            <button
              type="button"
              class="btn btn-primary"
              id="prevBtn"
              style="display: none"
            >
              Previous
            </button>
            <!-- Next Button -->
            <button type="button" class="btn btn-primary" id="nextBtn" disabled>
              Next
            </button>
          </div>
        </div>
      </div>
    </div> 

